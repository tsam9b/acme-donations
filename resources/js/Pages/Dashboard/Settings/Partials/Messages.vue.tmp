<script setup>
import { ref, watch } from 'vue'

const props = defineProps({ value: { type: Object, default: () => ({ confirmation: '', receipt_subject: '' }) } })
const emit = defineEmits(['update'])

const local = ref({ ...props.value })

watch(() => props.value, (v) => { local.value = { ...v } }, { deep: true })

const save = () => emit('update', local.value)
</script>

<template>
  <section>
    <header>
      <h3 class="text-lg font-medium text-gray-100">Messages</h3>
      <p class="mt-1 text-sm text-gray-400">Customize message templates used in emails and confirmations.</p>
    </header>

    <div class="mt-4 space-y-4">
      <div>
        <label class="block text-sm text-gray-300">Donation confirmation</label>
        <textarea v-model="local.confirmation" class="mt-1 block w-full rounded bg-gray-700 text-gray-100 p-2" rows="3"></textarea>
      </div>

      <div>
        <label class="block text-sm text-gray-300">Receipt subject</label>
        <input v-model="local.receipt_subject" class="mt-1 block w-full rounded bg-gray-700 text-gray-100 p-2" />
      </div>

      <div class="flex justify-end">
        <button @click="save" class="px-3 py-2 bg-[#FF2D20] text-white rounded">Save Messages</button>
      </div>
    </div>
  </section>
</template>
